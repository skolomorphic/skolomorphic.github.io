<style>
#reader-controls {
    padding: 1rem;
    border: 1px solid var(--accent-ultralight);
    background-color: var(--main-bg-color);
    border-radius: 15px;
    margin: 0;
    font-family: 'Source Code Pro', 'Courier New', Courier, monospace;
    font-size: calc(1rem - 2px);
    max-width: 300px;
}
#reader-controls button {
    border: 1px solid var(--accent-dark);
    background-color: var(--main-bg);
    box-shadow: 3px 3px var(--accent-dark);
    color: var(--accent-dark);
    padding: 3px 8px;
    font-family: 'Source Code Pro', 'Courier New', Courier, monospace;
}
#reader-controls button:hover, #reader-controls button:active {
    background-color: var(--accent-dark);
    box-shadow: 3px 3px var(--accent-light);
    color: var(--accent-light);
}
.control-container {
    position: fixed;
    bottom: 0;
    right: 0;
    padding: 0.5rem;
    z-index: 7;
}
.control-wrapper {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    padding: 5px;
}
.control-wrapper > * {
    align-self: stretch;
    flex: 1 1 auto;
    margin: 5px;
}
.control-section {
    margin: 5px;
    display: flex;
    align-items: center;
}

.control-section::before {
    content: '';
    flex: initial;
    height: 1px;
    margin-right: 10px;
    width: 20px;
    border-top: 1px solid var(--accent-light);
}
.control-section::after {
    content: '';
    flex: 1;
    margin-left: 10px;
    height: 1px;
    border-top: 1px solid var(--accent-light);
}

.control-toggle {
    color: var(--accent-midtone);
    font-size: 30px;
    margin-top: 5px;
}
.hidden {
    display: none;
}
</style>
